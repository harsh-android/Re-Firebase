<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_50sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:neumorph_shadowColorLight="#E0F7FF"
            app:neumorph_shadowElevation="@dimen/_5sdp"
            app:neumorph_shapeType="basin"
            app:neumorph_strokeColor="#E0F7FF"
            app:neumorph_strokeWidth="@dimen/_1sdp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@null"
                android:hint="Email"
                android:minHeight="48dp"
                android:textSize="@dimen/_12sdp" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            app:neumorph_shadowColorLight="#E0F7FF"
            app:neumorph_shadowElevation="@dimen/_5sdp"
            app:neumorph_shapeType="basin"
            app:neumorph_strokeColor="#E0F7FF"
            app:neumorph_strokeWidth="@dimen/_1sdp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@null"
                android:hint="Password"
                android:minHeight="48dp"
                android:textSize="@dimen/_12sdp" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            app:neumorph_shadowColorLight="#E0F7FF"
            app:neumorph_shadowElevation="@dimen/_5sdp"
            app:neumorph_shapeType="basin"
            app:neumorph_strokeColor="#DAF5FF"
            app:neumorph_strokeWidth="@dimen/_1sdp">

            <EditText
                android:id="@+id/confirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@null"
                android:hint="Confirm Password"
                android:minHeight="48dp"
                android:textSize="@dimen/_12sdp" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/signUp"
            style="@style/ShapeAppearance.Neumorph.Button"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="SIGN UP"
            app:neumorph_shapeType="basin"
            app:neumorph_strokeColor="@color/black"
            app:neumorph_strokeWidth="@dimen/_2sdp" />

    </LinearLayout>

</FrameLayout>